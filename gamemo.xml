    <data address="/sound/effects/points/win_line/filepath">medias/sons/TetrisLine.mp3</data>
    <data address="/sound/effects/points/win_line/volume">40</data>
    
    <data address="/sound/effects/game_over/filepath">medias/sons/TetrisGameOver.mp3</data>
