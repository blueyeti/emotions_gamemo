    <data address="/sound/effects/tetris/filepath">medias/sons/TetrisMusic.mp3</data>
    <data address="/sound/effects/tetris/volume">40</data>
    
    <data address="/sound/effects/level/up/filepath">medias/sons/creditsOpen.mp3</data>
