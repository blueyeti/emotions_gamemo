  <preset number="1" name="default">
  
    <!-- ordre des langues, ici à titre informatif -->
    <data address="/languages/main">FR</data>
    <data address="/languages/second">DE</data>
    <!-- résolution écran, ici à titre informatif -->
    <data address="/screen/w">1080</data>
    <data address="/screen/h">1920</data>
    <!-- mise en plein écran de l'interactif -->
    <data address="/screen/fullscreen">true</data>
    <!-- masquage du pointeur de la souris -->
    <data address="/screen/hideCursor">false</data>
    <!-- temps d'inactivité en secondes avant retour à l'écran d'accueil -->
    <data address="/time/timeout">120</data>
    <data address="/time/chrono">120</data>
    <!-- identifiant de l'interactif -->
    <data address="/application_id">1</data>
    <!-- mode debug (sans python) -->
    <data address="/debug">true</data>
    <!-- facteur de difficulté -->
    <data address="/difficulty_factor">3</data>

    <!-- chemin vers l'exécutable python.exe -->
    <data address="/python/bin">file:///C:/Python27/python.exe</data>
    <!-- chemin vers le script python de récupération des données du capteur GSR -->
    <data address="/python/gsr">C:/Users/Laugre/Travail/15-emotions/src/01-tetris/bin-debug/python/emoplay.py</data>
    
    <!-- code touche validation ENTER -->
    <data address="/keycode/valid">13</data>
    <!-- code touche rotation block TOP -->
    <data address="/keycode/rotate">38</data>
    <!-- code touche accélération chute block BOTTOM -->
    <data address="/keycode/accelerate">32</data>
    <!-- code touche déplacement gauche LEFT -->
    <data address="/keycode/left">37</data>
    <!-- code touche déplacement droite RIGHT -->
    <data address="/keycode/right">39</data>
    
    <!-- chemin vers les sons spécifiques à l'interactif et volumes (/100) -->
    <data address="/sound/effects/slide_interface/filepath">medias/sons/helpOpen.mp3</data>
    <data address="/sound/effects/slide_interface/volume">40</data>
    <data address="/sound/effects/slide_item/filepath">medias/sons/creditsOpen.mp3</data>
    <data address="/sound/effects/slide_item/volume">40</data>
    <data address="/sound/effects/show_valid_button/filepath">medias/sons/click.mp3</data>
    <data address="/sound/effects/show_valid_button/volume">40</data>
    <data address="/sound/effects/show_direction_button/filepath">medias/sons/click.mp3</data>
    <data address="/sound/effects/show_direction_button/volume">40</data>
    <data address="/sound/effects/click_valid_button/filepath">medias/sons/goHomeWnd.mp3</data>
    <data address="/sound/effects/click_valid_button/volume">40</data>
    <data address="/sound/effects/click_direction_button/filepath">medias/sons/click.mp3</data>
    <data address="/sound/effects/click_direction_button/volume">40</data>
    
    <data address="/sound/effects/quiet_calibration/filepath"></data>
